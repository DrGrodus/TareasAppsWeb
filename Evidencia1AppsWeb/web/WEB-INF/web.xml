<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistroDeUsuario</servlet-name>
        <servlet-class>com.example.model.RegistroDeUsuario</servlet-class>
    </servlet>
    <context-param>
        <param-name>AdminEmail</param-name>
        <param-value>AdminEmail@email.com</param-value>
    </context-param>
    <context-param>
        <param-name>AdminClave</param-name>
        <param-value>1234</param-value>
    </context-param>
    <servlet>
        <servlet-name>DetallesLibro</servlet-name>
        <servlet-class>com.example.web.DetallesLibro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarritoDetalles</servlet-name>
        <servlet-class>com.example.model.CarritoDetalles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogoLibros.do</servlet-name>
        <servlet-class>com.example.model.CatalogoLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogIn</servlet-name>
        <servlet-class>com.example.model.LogIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogoLibros</servlet-name>
        <servlet-class>com.example.model.CatalogoLibros</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroDeUsuario</servlet-name>
        <url-pattern>/RegistroDeUsuario.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetallesLibro</servlet-name>
        <url-pattern>/DetallesLibro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarritoDetalles</servlet-name>
        <url-pattern>/CarritoDetalles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatalogoLibros</servlet-name>
        <url-pattern>/CatalogoLibros.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatalogoLibros</servlet-name>
        <url-pattern>/CatalogoLibros</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
